<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="/assets/style.css" type="text/css" rel="stylesheet" />
    <title>Catalogo</title>
  </head>
  
  <body>
    <h1>Cat√°logo de personas</h1>
    
    <form action="/find" method="POST">
      <label for="criterio">Buscar personas</label><br>
      <input type="text" autofocus placeholder="Nombre" id="criterio" name="criterio"><br><br>
      <input type="submit" value="Buscar">
    </form>

<!-- Creacion de tabla  -->
    <table>
      <thead>
        <tr>
          <th>NSS</th>
          <th>Nombre</th>
          <th>Edad</th>
          <th>Tipo de Sangre</th>
          <th></th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% Object.keys(Persons).forEach(function(prop) { %>
        <tr>
          <td><%- Persons[prop].nss %></td>
          <td><%- Persons[prop].nombre %></td>
          <td><%- Persons[prop].edad %></td>
          <td><%- Persons[prop].tipoSangre %></td>
          <td><a href="<%= `deletePerson/${Persons[prop]._id}` %>">Delete</a></td>
          <td><a href="<%= `findById/${Persons[prop]._id}` %>">Edit</a></td>
        </tr>
        <% }); %>
      </tbody>
    </table>
    <br>
    <a href="./addPerson">Agregar</a>
  </body>
</html>